<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a
      href="/admin/booking"
      class="btn btn-warning mt-4"
      ><i class="fas fa-arrow-left"></i> Back</a
    >
  </div>
  <div class="row">
    <div class="col-4">
      <img
        src="https://server-tripvacation.vercel.app/<%= booking.payments.proofPayment %>"
        width="400"
        class="img-fluid d-block m-auto"
        alt="Image" />
      <div class="row mt-4 pb-5 ml-1">
        <% if (booking.payments.status === 'Proces') {%>
        <form
          action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
          class="ml-3"
          method="POST"
          enctype="multipart/form-data">
          <button
            type="submit"
            class="btn btn-primary">
            <i class="fas fa-check"></i> Confirmation
          </button>
        </form>
        <form
          action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
          class="ml-3"
          method="POST"
          enctype="multipart/form-data">
          <button
            type="submit"
            class="btn btn-danger">
            <i class="fas fa-times"></i> Reject
          </button>
        </form>

        <% } %>
      </div>
    </div>
    <div class="col-7">
      <div class="card-body">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTablesActivity"
            width="100%"
            cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank</th>
                <th>Nama Rekening</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>$<%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.payments.accountHolder %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

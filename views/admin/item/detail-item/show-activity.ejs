<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="home-tab">
  <div class="card shadow mb-4">
    <div class="row">
      <div class="col-5">
        <form
          action="/admin/item/add/activity"
          class="ml-3"
          method="POST"
          enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              required
              id="name"
              name="name"
              placeholder="Input Name" />
          </div>
          <div class="form-group">
            <label for="type">Type</label>
            <input
              type="text"
              class="form-control"
              required
              id="type"
              name="type"
              placeholder="Input Type" />
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input
              type="file"
              class="form-control"
              multiple
              required
              id="image"
              name="image" />
          </div>
          <input
            type="hidden"
            class="id"
            value="<%= itemId %>"
            name="itemId" />
          <button
            type="submit"
            class="btn btn-primary">
            Save
          </button>
        </form>
      </div>
      <div class="col-7">
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTablesActivity"
              width="100%"
              cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < activity.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td class="text-center">
                    <img
                      src="https://tripvacation-server.vercel.app/<%= activity[i].imageUrl %>"
                      alt=" <%= activity[i].name %>"
                      class="img-fluid"
                      width="300" />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST">
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update-activity"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>">
                        <i class="fas fa-edit"></i>
                      </a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../../parts/header.ejs') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../../parts/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../../../parts/navbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <%- include('../../../parts/message.ejs') %>
                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">TripVacation Dashboard Detail Item</h1>
                    <!--End of Heading-->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-featured" role="tab"
                                aria-controls="home" aria-selected="true">Show Featured</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#show-activity" role="tab"
                                aria-controls="profile" aria-selected="false">Show Activity</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <%- include('show-featured.ejs') %>
                        <%- include('show-activity.ejs') %>
                    </div>


                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../../parts/footer.ejs') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <%- include('../../../parts/js.ejs') %>
    <%- include('show_modal_activity.ejs') %>
    <%- include('show-modal-featured.ejs') %>
    <script>
        ClassicEditor
            .create(document.querySelector('#description'))
            .catch(error => {
                console.error(error);
            });
        $(document).ready(function () {
            $('#dataTablesActivity').dataTable();
        })
        $('#dataTable').on('click', '.button-update-featured', function () {
            let id = $(this).data('id');
            let qty = $(this).data('qty');
            let name = $(this).data('name');
            // console.log(nameBank)
            $('#edit_modal_featured').modal('show');
            $('.id').val(id);
            $('.name').val(name);
            $('.qty').val(qty);
        })
        $('#dataTablesActivity').on('click', '.button-update-activity', function () {
            let id = $(this).data('id');
            let type = $(this).data('type');
            let name = $(this).data('name');
            // console.log(nameBank)
            $('#edit_modal_activity').modal('show');
            $('.id').val(id);
            $('.name').val(name);
            $('.type').val(type);
        })
    </script>

</body>

</html>